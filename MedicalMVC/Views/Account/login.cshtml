﻿@using MedicalMVC.ViewModel.Accounts
@model AccountVM
<div class="Log_in box">
    <div class="loginContainer">
        <h2 class="Log_in-Name text-center">Login</h2>
        <form method="post" asp-controller="Account" asp-action="login">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" type="text" placeholder="User Name" />
                <span class="text-danger">@Html.ValidationMessageFor(model => model.UserName)</span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassword"></label>
                <input asp-for="UserPassword" class="form-control" type="text" placeholder="Password" />
                <span class="text-danger">@Html.ValidationMessageFor(model => model.UserPassword)</span>
            </div>
            <button type="submit" class="btn-primary">Login</button>
        </form>
    </div>
</div>